<form id="order-form" class="form-horizontal">
  <div class="form-group">
    <label class="control-label col-sm-4"><%= t ".receiver" %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control" name="receiver_name" required>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-4"><%= t ".phone" %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control" name="phone" required>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-4"><%= t ".address" %></label>
    <div class="col-sm-8">
      <input type="text" class="form-control" name="deliver_address" required>
    </div>
  </div>
  <div>
    <div class="order_total">
      <div class="text-important text-right min-width-70"><%= t ".total" %></div>
      <div id="order_price" class="text-important-bg color-red">
        <%= number_to_currency(0) %>
      </div>
    </div>
    <button type="submit" class="btn btn-danger btn-block"
            id="submit-order-btn" disabled>
      <%= t ".buy" %>
      (<span id="selected_amount">0</span>)
    </button>
  </div>
</form>

<%= javascript_pack_tag "create_order" %>
