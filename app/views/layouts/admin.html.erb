<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= full_title yield(:title) %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <%= render "layouts/header_admin" %>
    <main>
      <div class="container-fluid">
        <div class="row admin-container">
          <div class="col-md-2 admin_aside">
            <ul>
              <%= link_to admin_orders_path do %>
                <li><%= t ".orders" %></li>
              <% end %>

              <%= link_to "#" do %>
                <li><%= t ".users" %></li>
              <% end %>

              <%= link_to "#" do %>
                <li><%= t ".categories" %></li>
              <% end %>

              <%= link_to "#" do %>
                <li><%= t ".products" %></li>
              <% end %>
            </ul>
          </div>
          <div class="col-md-10">
            <%= yield %>
          </div>
        </div>
      </div>
    </main>
    <%= render "layouts/footer" %>
  </body>
</html>
