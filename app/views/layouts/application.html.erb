<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= full_title yield(:title) %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <%= render "layouts/header" %>

    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>

    <%= render "layouts/footer" %>
  </body>
  <script>
    <%= toastr_flash %>
</script>
</html>
